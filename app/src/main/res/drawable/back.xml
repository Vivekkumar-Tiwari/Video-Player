<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/transparent"/> <!-- Transparent or any background color -->

    <stroke
        android:width="2dp"
        android:color="@android:color/white"/> <!-- White stroke of 2dp -->

    <corners android:radius="8dp"/> <!-- Optional: Rounded corners -->

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
